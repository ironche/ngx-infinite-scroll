{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@ngx-infinite-scroll/*": ["projects/ngx-infinite-scroll/src/lib/*"],
      "@ngx-virtual-scroll/*": ["projects/ngx-virtual-scroll/src/lib/*"]
    }
  }
}
